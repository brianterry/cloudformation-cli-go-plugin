{
    "typeName": "Example::S3::Bucket",
    "description": "An example resource schema demonstrating some basic constructs and validation rules.",
    "sourceUrl": "https://github.com/aws-cloudformation/cloudformation-cli-go-plugin/blob/master/examples/s3-bucket",
    "properties": {
        "BucketName": {
            "description": "A name for the bucket. If you don't specify a name, AWS CloudFormation generates a unique physical ID and uses that ID for the bucket name. ",
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "BucketName"
    ],
    "createOnlyProperties": [
        "/properties/BucketName"
    ],
    "primaryIdentifier": [
        "/properties/BucketName"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "s3:CreateBucket"
            ]
        },
        "delete": {
            "permissions": [
                "s3:DeleteBucket"
            ]
        },
        "list": {
            "permissions": [
                "s3:ListBuckets"
            ]
        },
        "update": {
            "permissions": [
                "s3:CreateBucket"
            ]
        },
        "read": {
            "permissions": [
                "s3:ListBuckets"
            ]
        }

    }
}